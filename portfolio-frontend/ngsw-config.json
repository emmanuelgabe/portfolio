{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/favicon.svg",
          "/favicon-96x96.png",
          "/index.html",
          "/site.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api-site-config",
      "urls": [
        "**/api/site-configuration"
      ],
      "cacheConfig": {
        "maxSize": 1,
        "maxAge": "1d",
        "timeout": "10s",
        "strategy": "freshness"
      }
    },
    {
      "name": "api-projects",
      "urls": [
        "**/api/projects",
        "**/api/projects/featured",
        "**/api/projects/search/**"
      ],
      "cacheConfig": {
        "maxSize": 50,
        "maxAge": "1h",
        "timeout": "10s",
        "strategy": "freshness"
      }
    },
    {
      "name": "api-skills",
      "urls": [
        "**/api/skills"
      ],
      "cacheConfig": {
        "maxSize": 50,
        "maxAge": "1h",
        "timeout": "10s",
        "strategy": "freshness"
      }
    },
    {
      "name": "api-articles",
      "urls": [
        "**/api/articles",
        "**/api/articles/paginated**"
      ],
      "cacheConfig": {
        "maxSize": 100,
        "maxAge": "30m",
        "timeout": "10s",
        "strategy": "freshness"
      }
    },
    {
      "name": "api-experiences",
      "urls": [
        "**/api/experiences",
        "**/api/experiences/type/**",
        "**/api/experiences/ongoing",
        "**/api/experiences/recent**"
      ],
      "cacheConfig": {
        "maxSize": 50,
        "maxAge": "1h",
        "timeout": "10s",
        "strategy": "freshness"
      }
    },
    {
      "name": "api-tags",
      "urls": [
        "**/api/tags"
      ],
      "cacheConfig": {
        "maxSize": 50,
        "maxAge": "1h",
        "timeout": "10s",
        "strategy": "freshness"
      }
    },
    {
      "name": "api-cv",
      "urls": [
        "**/api/cv/current"
      ],
      "cacheConfig": {
        "maxSize": 1,
        "maxAge": "1d",
        "timeout": "10s",
        "strategy": "freshness"
      }
    },
    {
      "name": "api-images",
      "urls": [
        "**/api/projects/*/images/**",
        "**/api/articles/*/images/**",
        "**/uploads/**"
      ],
      "cacheConfig": {
        "maxSize": 100,
        "maxAge": "7d",
        "timeout": "5s",
        "strategy": "performance"
      }
    }
  ],
  "navigationUrls": [
    "/**",
    "!/**/*.*",
    "!/**/*__*",
    "!/**/*__*/**",
    "!/api/**"
  ]
}
